@model DepartmentViewModel
@{
    ViewData["Title"] = "Details";
}

<h1>Department Details</h1>
<br />
<br />
@if(TempData["Message"] != null)
{
    <div class="alert alert-success">
        <h3>@TempData["Message"]</h3>
    </div>
}

<div class="row">
    <div class="col-6">
            <div class="form-group">
                <label asp-for="@Model.Code" class="col-form-label"></label>
                <input asp-for="@Model.Code" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Name" class="col-form-label"></label>
                <input asp-for="@Model.Name" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="@Model.CreateAt" class="col-form-label"></label>
                <input asp-for="@Model.CreateAt" class="form-control" readonly />
            </div>
            <br />
            <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-success">Update</a>
            <a asp-action="Index" class="btn btn-light">Back To List</a>
    </div>
</div>


