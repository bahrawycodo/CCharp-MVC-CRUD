<div class="form-group form-check ps-0 pe-0">
    <input asp-for="@Model.IsActive" type="checkbox" class="form-control-input" readonly />
    <label asp-for="@Model.IsActive" class="col-form-label"></label>
</div>
<div class="mt-2">
    <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-success">Update</a>
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</div>

