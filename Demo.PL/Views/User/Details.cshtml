@model UserViewModel
@{
    ViewData["Title"] = "Details";
}

<h1>User Details</h1>


<div class="row">
    <div class="col-6">
        <div class="form-group">
            <label asp-for="@Model.UserName" class="col-form-label"></label>
            <input asp-for="@Model.UserName" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Email" class="col-form-label"></label>
            <input asp-for="@Model.Email" class="form-control" readonly />
        </div>
        <br />
        <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-success">Update</a>
        <a asp-action="Index" class="btn btn-light">Back To List</a>
    </div>
</div>