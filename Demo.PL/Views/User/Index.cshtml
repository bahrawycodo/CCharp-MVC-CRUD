@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}
<h1>All Users</h1>
<br />
<form class="my-3" asp-action="Index" asp-controller="User">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search By Email" name="SearchValue" class="form-control" value="@ViewBag.SearchValue" />
        </div>
        <div class="col-sm-4">
            <button type="submit" class="btn btn-success btn-block">Search</button>
        </div>
    </div>
</form>
@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover table-bordered">
        <thead class="bg-dark text-white">
            <tr>
                <th>@Html.DisplayNameFor(x=>x.Id)</th>
                <th>@Html.DisplayNameFor(x=>x.UserName)</th>
                <th>@Html.DisplayNameFor(x=>x.Email)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <partial name="_TableButtonsPartial" model="@item.Id" />

                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="alert alert-warning">
        <h3>No Users Found!!</h3>
    </div>
}
@section Scripts{
    <script>
        function deleteItem(id, el) {
            Swal.fire({
                title: "Do you Want To Delete User",
                showDenyButton: true,
                confirmButtonText: "Yes",
                denyButtonText: "No",
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post("/User/Delete", { 'id': id }, function (res) {
                        if (res.message == "Success") {
                            swal.fire({
                                title: "Deleted Succesfully",
                                html: res.message,
                                timer: 2000,
                                icon: "success"
                            });

                            // removing
                            $(el).closest('tr').remove();
                        } else {
                            swal.fire({
                                title: "Can't delete",
                                html: res.message,
                                icon: "error"
                            });
                        }
                    });
                } else if (result.isDenied) {
                    swal.close();
                }
            })
        }

    </script>
}