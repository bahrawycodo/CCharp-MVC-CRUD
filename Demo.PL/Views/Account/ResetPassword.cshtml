@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "_AuthLayout";
}

<form asp-action="ResetPassword">
	<div asp-validation-summary="All" class="text-danger"></div>
	<input asp-for="@Model.Email" type="hidden" />
	<input asp-for="@Model.Token" type="hidden" />
	<input class="text" type="password" asp-for="@Model.Password" placeholder="Password" required="">
	<input class="text w3lpass" type="password" asp-for="@Model.ConfirmPassword" placeholder="Confirm Password" required="">

	<input type="submit" value="ResetPassword" />
</form>
